# ProbeOps Database Configuration
# ==============================
# Copy this file to .env.db and fill in your database credentials

# Database connection string
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/probeops

# Optional: Database connection settings (will be parsed from DATABASE_URL if not provided)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=probeops

# Migration settings
MIGRATION_AUTO_APPLY=false
MIGRATION_BACKUP=true
MIGRATION_BACKUP_DIR=./database_backups

# Debug settings
DEBUG_MIGRATIONS=false